<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nogsantos.br.nogdroid.Principal"
    android:id="@+id/mainBg"
    android:background="@drawable/mainbg">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btLogo"
        android:background="@drawable/logo"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btFacebook"
        android:background="@drawable/facebook"
        android:clickable="true"
        android:adjustViewBounds="true"
        android:layout_below="@+id/btLogo"
        android:layout_toRightOf="@+id/btGitHub"
        android:layout_toEndOf="@+id/btGitHub" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btGitHub"
        android:background="@drawable/github"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btLinkedin"
        android:background="@drawable/linkedin"
        android:clickable="true"
        android:layout_below="@+id/btLogo"
        android:layout_toLeftOf="@+id/btTwitter"
        android:layout_toStartOf="@+id/btTwitter" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btMail"
        android:background="@drawable/gmail"
        android:clickable="true"
        android:layout_alignBottom="@+id/btMe"
        android:layout_alignLeft="@+id/btTwitter"
        android:layout_alignStart="@+id/btTwitter" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btMe"
        android:background="@drawable/users"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:longClickable="true"
        android:layout_alignTop="@+id/btTwitter"
        android:layout_alignLeft="@+id/btLogo"
        android:layout_alignStart="@+id/btLogo"
        android:layout_marginTop="29dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btCall"
        android:background="@drawable/call"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btLinkedin"
        android:layout_alignEnd="@+id/btLinkedin" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btTwitter"
        android:background="@drawable/twitter"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/btLogo"
        android:layout_alignEnd="@+id/btLogo"
        android:clickable="true"
        android:focusable="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btGplus"
        android:background="@drawable/googleplus"
        android:layout_alignTop="@+id/btMail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btAndroid"
        android:background="@drawable/android"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btGplus"
        android:layout_toEndOf="@+id/btGplus"
        android:layout_marginLeft="23dp" />
</RelativeLayout>
